<!-- Top Underlay Image -->
<control type="image">
	<posx>0</posx>
	<posy>0</posy>
	<width>1280</width>
	<height>115</height>
	<aspectratio>stretch</aspectratio>
	<colordiffuse>$VAR[var-carbon_custom_colours]</colordiffuse>
	<texture border="2">layouts/art/top_bar.png</texture>
</control>
<!-- System Logo -->
<control type="image">
	<description>logo</description>
	<posx>30</posx>
	<posy>20</posy>
	<width>490</width>
	<height>72</height>
	<aspectratio align="left">keep</aspectratio>
	<texture>layouts/$INFO[Skin.String(emuname)]/art/logo.png</texture>
</control>
<control type="image">
	<description>controller</description>
	<posx>995</posx>
	<posy>0</posy>
	<width>190</width>
	<height>110</height>
	<aspectratio>keep</aspectratio>
	<texture>layouts/$INFO[Skin.String(emuname)]/art/system_art_small.png</texture>
	<animation effect="fade" start="100" end="65" time="0" condition="true">Conditional</animation>
</control>
<!-- Bottom Underlay Image -->
<control type="image">
	<posx>0</posx>
	<posy>47r</posy>
	<width>1280</width>
	<height>47</height>
	<aspectratio>stretch</aspectratio>
	<colordiffuse>$VAR[var-carbon_custom_colours]</colordiffuse>
	<texture>layouts/art/help_background.png</texture>
</control>
<!-- Context Button Overlay -->
<include>ContextButtonsEmulators</include>
<!-- Thumbnail Image -->
<control type="image">
	<posx>285</posx>
	<posy>135</posy>
	<width>710</width>
	<height>227</height>
	<aspectratio>keep</aspectratio>
	<texture background="true" fallback="layouts/art/no_thumbnail.png">$INFO[Container(9000).listitem.thumb]</texture>
	<fadetime>ThumbCrossfadeTime</fadetime>
	<include>EmulatorScrollFade</include>
</control>
<!-- List Control -->
<control type="list" id="9000">
	<posx>32</posx>
	<posy>375</posy>
	<width>1216</width>
	<height>280</height>
	<onleft>PageUp</onleft>
	<onright>PageDown</onright>
	<onup>9000</onup>
	<ondown>9000</ondown>
	<viewtype label="List">List</viewtype>
	<preloaditems>2</preloaditems>
	<itemlayout height="40" width="1216">
		<control type="label">
			<posx>0</posx>
			<posy>0</posy>
			<width>1216</width>
			<height>40</height>
			<font>size_23</font>
			<textcolor>FF969696</textcolor>
			<selectedcolor>FF969696</selectedcolor>
			<align>center</align>
			<aligny>center</aligny>
			<label>[UPPERCASE]$INFO[ListItem.Label][/UPPERCASE]</label>
		</control>
	</itemlayout>
	<focusedlayout height="40" width="1216">
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>1216</width>
			<height>41</height>
			<aspectratio>stretch</aspectratio>
			<colordiffuse>FF1C1C1C</colordiffuse>
			<texture border="1">background diffuse.png</texture>
		</control>
		<control type="label">
			<posx>0</posx>
			<posy>0</posy>
			<width>1216</width>
			<height>40</height>
			<font>size_23</font>
			<textcolor>$VAR[var-carbon_custom_colours]</textcolor>
			<selectedcolor>FF969696</selectedcolor>
			<align>center</align>
			<aligny>center</aligny>
			<label>[UPPERCASE]$INFO[ListItem.Label][/UPPERCASE]</label>
		</control>
	</focusedlayout>
</control>