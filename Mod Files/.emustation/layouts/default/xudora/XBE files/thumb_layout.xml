<!-- Thumbnail Image -->
<control type="image">
	<posx>548</posx>
	<posy>179</posy>
	<width>683</width>
	<height>434</height>
	<aspectratio>keep</aspectratio>
	<texture background="true" fallback="layouts/art/no_thumbnail.png">$INFO[listitem.thumb]</texture>
	<fadetime>ThumbCrossfadeTime</fadetime>
	<include>XbeScrollFade</include>
	<visible>!Player.HasVideo</visible>
</control>
<!-- Video Window -->
<control type="videowindow">
	<description>video preview window</description>
	<posx>548</posx>
	<posy>179</posy>
	<width>683</width>
	<height>434</height>
	<aspectratio>keep</aspectratio>
	<animation effect="fade" start="0" end="100" delay="800" time="600">WindowOpen</animation>
	<animation effect="fade" start="100" end="0" delay="0" time="100">WindowClose</animation>
</control>
<!-- List Control -->
<control type="list" id="50">
	<posx>38</posx>
	<posy>116</posy>
	<width>461</width>
	<height>558</height>
	<onleft>PageUp</onleft>
	<onright>PageDown</onright>
	<onup>50</onup>
	<ondown>50</ondown>
	<viewtype label="List">List</viewtype>
	<preloaditems>2</preloaditems>
	<itemlayout height="32.8" width="461">
		<control type="label">
			<posx>20</posx>
			<posy>-1</posy>
			<width>421</width>
			<height>32</height>
			<font>size_21</font>
			<textcolor>list-text-colour</textcolor>
			<selectedcolor>list-background-colour</selectedcolor>
			<align>left</align>
			<aligny>center</aligny>
			<label>[B][UPPERCASE]$INFO[ListItem.Label][/UPPERCASE][/B]</label>
		</control>
	</itemlayout>
	<focusedlayout height="32.8" width="461">
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>461</width>
			<height>32</height>
			<aspectratio>stretch</aspectratio>
			<colordiffuse>list-select-colour</colordiffuse>
			<texture border="1">background diffuse.png</texture>
		</control>
		<control type="label">
			<posx>20</posx>
			<posy>-1</posy>
			<width>421</width>
			<height>32</height>
			<font>size_21</font>
			<textcolor>list-text-select-colour</textcolor>
			<selectedcolor>list-background-colour</selectedcolor>
			<align>left</align>
			<aligny>center</aligny>
			<label>[B][UPPERCASE]$INFO[ListItem.Label][/UPPERCASE][/B]</label>
		</control>
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>5</width>
			<height>32</height>
			<aspectratio>stretch</aspectratio>
			<texture>$INFO[listitem.overlay]</texture>
		</control>
	</focusedlayout>
</control>