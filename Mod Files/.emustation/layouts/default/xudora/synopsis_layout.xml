<!-- List Control -->
<control type="list" id="9000">
	<posx>38</posx>
	<posy>116</posy>
	<width>461</width>
	<height>558</height>
	<onleft>PageUp</onleft>
	<onright>PageDown</onright>
	<onup>9000</onup>
	<ondown>9000</ondown>
	<viewtype label="List">List</viewtype>
	<preloaditems>2</preloaditems>
	<itemlayout height="32.8" width="461">
		<control type="label">
			<posx>20</posx>
			<posy>-1</posy>
			<width>421</width>
			<height>32</height>
			<font>size_21</font>
			<textcolor>list-text-colour</textcolor>
			<selectedcolor>list-background-colour</selectedcolor>
			<align>left</align>
			<aligny>center</aligny>
			<label>[B][UPPERCASE]$INFO[ListItem.Label][/UPPERCASE][/B]</label>
			<scroll>false</scroll>
		</control>
	</itemlayout>
	<focusedlayout height="32.8" width="461">
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>461</width>
			<height>32</height>
			<aspectratio>stretch</aspectratio>
			<colordiffuse>list-select-colour</colordiffuse>
			<texture border="1">background diffuse.png</texture>
		</control>
		<control type="label">
			<posx>20</posx>
			<posy>-1</posy>
			<width>421</width>
			<height>32</height>
			<font>size_21</font>
			<textcolor>list-text-select-colour</textcolor>
			<selectedcolor>list-background-colour</selectedcolor>
			<align>left</align>
			<aligny>center</aligny>
			<label>[B][UPPERCASE]$INFO[ListItem.Label][/UPPERCASE][/B]</label>
		</control>
	</focusedlayout>
</control>