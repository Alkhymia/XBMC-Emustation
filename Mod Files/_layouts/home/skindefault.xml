<control type="group">
	<animation effect="fade" time="150">WindowOpen</animation>
	<animation effect="fade" time="150">WindowClose</animation>
	<!-- Images used for the background if they are preset -->
	<control type="image">
		<include>1280x720</include>
		<aspectratio>stretch</aspectratio>
		<texture background="true">$INFO[Container(9000).ListItem(-1).ActualIcon]</texture>
		<visible>Container(9000).OnNext + Skin.HasSetting(althomeanimation)</visible>
	</control>
	<control type="image">
		<include>1280x720</include>
		<aspectratio>stretch</aspectratio>
		<texture background="true">$INFO[Container(9000).ListItem(1).ActualIcon]</texture>
		<visible>Container(9000).OnPrevious + Skin.HasSetting(althomeanimation)</visible>
	</control>
	<control type="image">
		<include>1280x720</include>
		<aspectratio>stretch</aspectratio>
		<texture background="true">$INFO[Container(9000).ListItem(1).ActualIcon]</texture>
		<animation effect="slide" reversible="true" start="0,0" end="1280,0" delay="1" time="400" tween="Cubic" easing="inout" condition="!Container(9000).OnPrevious">Conditional</animation>
		<visible>!Container(9000).OnPrevious + Skin.HasSetting(althomeanimation)</visible>
	</control>
	<control type="image">
		<include>1280x720</include>
		<aspectratio>stretch</aspectratio>
		<texture background="true">$INFO[Container(9000).ListItem(0).ActualIcon]</texture>
		<animation effect="fade" reversible="true" delay="300" time="300" condition="!Container(9000).OnNext + !Skin.HasSetting(althomeanimation)">Conditional</animation>
		<animation effect="fade" reversible="true" delay="300" time="300" condition="!Container(9000).OnPrevious + !Skin.HasSetting(althomeanimation)">Conditional</animation>
		<animation effect="slide" reversible="true" start="0,0" end="-1280,0" delay="1" time="400" tween="Cubic" easing="inout" condition="!Container(9000).OnNext + Skin.HasSetting(althomeanimation)">Conditional</animation>
		<animation effect="slide" reversible="true" start="0,0" end="1280,0" delay="1" time="400" tween="Cubic" easing="inout" condition="!Container(9000).OnPrevious + Skin.HasSetting(althomeanimation)">Conditional</animation>
		<visible>!Container(9000).OnNext + !Container(9000).OnPrevious</visible>
	</control>
	<control type="image">
		<include>1280x720</include>
		<aspectratio>stretch</aspectratio>
		<texture background="true">$INFO[Container(9000).ListItem(-1).ActualIcon]</texture>
		<animation effect="slide" reversible="true" start="0,0" end="-1280,0" delay="1" time="400" tween="Cubic" easing="inout" condition="!Container(9000).OnNext + Skin.HasSetting(althomeanimation)">Conditional</animation>
		<visible>!Container(9000).OnNext + Skin.HasSetting(althomeanimation)</visible>
	</control>
	<control type="image">
		<include>1280x720</include>
		<aspectratio>stretch</aspectratio>
		<texture background="true">$INFO[Container(9000).ListItem(-1).ActualIcon]</texture>
		<animation effect="fade" reversible="true" start="100" end="0" delay="100" time="100" tween="Cubic" easing="inout" condition="!Container(9000).OnNext">Conditional</animation>
		<visible>!Container(9000).OnNext + Skin.HasSetting(althomeanimation)</visible>
	</control>
	<control type="image">
		<include>1280x720</include>
		<aspectratio>stretch</aspectratio>
		<texture background="true">$INFO[Container(9000).ListItem(1).ActualIcon]</texture>
		<animation effect="fade" reversible="true" start="100" end="0" delay="100" time="100" tween="Cubic" easing="inout" condition="!Container(9000).OnPrevious">Conditional</animation>
		<visible>!Container(9000).OnPrevious + Skin.HasSetting(althomeanimation)</visible>
	</control>
	<control type="image">
		<posx>0</posx>
		<posy>443</posy>
		<width>1280</width>
		<height>50</height>
		<aspectratio>stretch</aspectratio>
		<colordiffuse>carousel_bar_lower</colordiffuse>
		<texture background="true">layouts/art/carousel_bar.png</texture>
		<animation effect="zoom" reversible="true" start="100,1" end="100,100" delay="800" time="200" tween="Cubic" easing="inout" condition="!Container(9000).OnNext + !StringCompare(Container(9000).ListItem.Label,0)">Conditional</animation>
		<animation effect="zoom" reversible="true" start="100,1" end="100,100" delay="800" time="200" tween="Cubic" easing="inout" condition="!Container(9000).OnPrevious + !StringCompare(Container(9000).ListItem.Label,0)">Conditional</animation>
		<visible>!StringCompare(Container(9000).ListItem.Label,$LOCALIZE[5]) + !Container(9000).OnNext + !Container(9000).OnPrevious</visible>
	</control>
	<control type="image">
		<posx>0</posx>
		<posy>275</posy>
		<width>1280</width>
		<height>168</height>
		<aspectratio>stretch</aspectratio>
		<colordiffuse>carousel_bar</colordiffuse>
		<texture background="true">layouts/art/carousel_bar.png</texture>
	</control>
	<control type="image">
		<posx>0</posx>
		<posy>635</posy>
		<width>1280</width>
		<height>85</height>
		<aspectratio>stretch</aspectratio>
		<texture background="true">layouts/art/system_help.png</texture>
	</control>
	<!-- default labels -->
	<control type="label">
		<include>CarouselLabelCommonValues</include>
		<label>$INFO[System.DVDLabel]</label>
		<animation effect="fade" reversible="true" start="0" end="100" delay="1050" time="200" tween="Cubic" easing="in" condition="!Container(9000).OnNext + !Container(9000).OnPrevious">Conditional</animation>
		<animation effect="fade" reversible="true" start="100" end="0" delay="0" time="0" condition="Container(9000).OnNext | Container(9000).OnPrevious">Conditional</animation>
		<visible>StringCompare(Container(9000).ListItem.Label2,$LOCALIZE[427])</visible>
	</control>
	<control type="label">
		<include>CarouselLabelCommonValues</include>
		<label>$INFO[Container(9000).ListItem.Label] Game Available</label>
		<animation effect="fade" reversible="true" start="0" end="100" delay="1050" time="200" tween="Cubic" easing="in" condition="!Container(9000).OnNext + !Container(9000).OnPrevious">Conditional</animation>
		<animation effect="fade" reversible="true" start="100" end="0" delay="0" time="0" condition="Container(9000).OnNext | Container(9000).OnPrevious">Conditional</animation>
		<visible>!StringCompare(Container(9000).ListItem.Label,0) + StringCompare(Container(9000).ListItem.Label,1) + !StringCompare(Container(9000).ListItem.Label,$LOCALIZE[5]) + !StringCompare(Container(9000).ListItem.Label2,$LOCALIZE[427])</visible>
	</control>
	<control type="label">
		<include>CarouselLabelCommonValues</include>
		<label>$INFO[Container(9000).ListItem.Label] Games Available</label>
		<animation effect="fade" reversible="true" start="0" end="100" delay="1050" time="200" tween="Cubic" easing="in" condition="!Container(9000).OnNext + !Container(9000).OnPrevious">Conditional</animation>
		<animation effect="fade" reversible="true" start="100" end="0" delay="0" time="0" condition="Container(9000).OnNext | Container(9000).OnPrevious">Conditional</animation>
		<visible>!StringCompare(Container(9000).ListItem.Label,0) + !StringCompare(Container(9000).ListItem.Label,1) + !StringCompare(Container(9000).ListItem.Label,$LOCALIZE[5]) + !StringCompare(Container(9000).ListItem.Label2,$LOCALIZE[427])</visible>
	</control>
	<!-- Default View uses 3 images -->
	<control type="wraplist" id="9000">
		<posx>0</posx>
		<posy>310</posy>
		<width>1280</width>
		<height>1280</height>
		<onleft>9000</onleft>
		<onright>9000</onright>
		<onup>-</onup>
		<ondown>-</ondown>
		<scrolltime>400</scrolltime>
		<focusposition>1</focusposition>
		<movement>1</movement>
		<preloaditems>0</preloaditems>
		<orientation>Horizontal</orientation>
		<itemlayout width="555" height="167">
			<control type="image">
				<posx>-155</posx>
				<posy>0</posy>
				<width>480</width>
				<height>98</height>
				<aspectratio>keep</aspectratio>
				<colordiffuse>55FFFFFF</colordiffuse>
				<texture background="true" fallback="layouts/art/missing_logo.png">$INFO[ListItem.Thumb]</texture>
			</control>
		</itemlayout>
		<focusedlayout width="555" height="167">
			<control type="image">
				<posx>-155</posx>
				<posy>0</posy>
				<width>480</width>
				<height>98</height>
				<aspectratio>keep</aspectratio>
				<texture background="true" fallback="layouts/art/missing_logo.png">$INFO[ListItem.Thumb]</texture>
			</control>
		</focusedlayout>
	</control>
</control>	