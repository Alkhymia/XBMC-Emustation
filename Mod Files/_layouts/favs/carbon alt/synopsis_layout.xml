<!-- list -->
<control type="list" id="450">
	<posx>27</posx>
	<posy>104</posy>
	<width>582</width>
	<height>570</height>
	<onleft>PageUp</onleft>
	<onright>PageDown</onright>
	<onup>450</onup>
	<ondown>450</ondown>
	<viewtype label="List">List</viewtype>
	<pagecontrol>70</pagecontrol>
	<scrolltime>150</scrolltime>
	<preloaditems>6</preloaditems>
	<itemlayout height="30" width="582">
		<control type="label">
			<posx>5</posx>
			<posy>0</posy>
			<width>573</width>
			<height>30</height>
