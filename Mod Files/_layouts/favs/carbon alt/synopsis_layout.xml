<!-- Full name, publisher info eg... -->
<control type="textbox">
	<posx>696</posx>
	<posy>410</posy>
	<width>502</width>
	<height>44</height>
	<font>size_17</font>
	<textcolor>FF969696</textcolor>
	<align>center</align>
	<scrolltime>200</scrolltime>
	<autoscroll delay="5000" time="2000" repeat="1000" condition="Container(450).HasFocus">Conditional</autoscroll>
