<!-- Background Images -->
<control type="image">
	<description>background</description>
	<posx>0</posx>
	<posy>0</posy>
	<width>1280</width>
	<height>720</height>
	<aspectratio>stretch</aspectratio>
	<texture>layouts\art\layout_alt_1.png</texture>
</control>
<!-- System Logos -->
<control type="image">
	<description>logo</description>
	<posx>19</posx>
	<posy>18</posy>
	<width>581</width>
	<height>86</height>
	<aspectratio>keep</aspectratio>
	<texture>layouts/favourites/art/logo.png</texture>
</control>
<control type="image">
	<description>controller</description>
	<posx>695</posx>
	<posy>18</posy>
	<width>544</width>
	<height>86</height>
	<aspectratio>keep</aspectratio>
	<texture>layouts/favourites/art/system_art_small.png</texture>
</control>
<!-- Context Button Overlay -->
<include>ContextButtonsFAVS</include>
<!-- Thumbnail Image -->
<control type="image">
	<posx>647</posx>
	<posy>124</posy>
	<width>617</width>
	<height>552</height>
	<aspectratio>keep</aspectratio>
	<texture background="false" fallback="layouts/art/no_thumbnail.png">$INFO[Container(450).listitem.thumb]</texture>
</control>
<!-- List Control -->
<control type="list" id="450">
	<posx>19</posx>
	<posy>129</posy>
	<width>609</width>
	<height>542</height>
	<onleft>PageUp</onleft>
	<onright>PageDown</onright>
	<onup>450</onup>
	<ondown>450</ondown>
	<viewtype label="List">List</viewtype>
	<scrolltime>150</scrolltime>
	<preloaditems>2</preloaditems>
	<itemlayout height="30" width="460">
		<control type="label">
			<posx>304.5</posx>
			<posy>0</posy>
			<width>609</width>
			<height>30</height>
			<font>size_21</font>
			<textcolor>FF282A2B</textcolor>
			<selectedcolor>FFEDEDED</selectedcolor>
			<align>center</align>
			<aligny>center</aligny>
			<label>[UPPERCASE]$INFO[ListItem.Label][/UPPERCASE]</label>
		</control>
	</itemlayout>
	<focusedlayout height="30" width="460">
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>609</width>
			<height>31</height>
			<aspectratio>stretch</aspectratio>
			<colordiffuse>6034383B</colordiffuse>
			<texture border="1">background diffuse.png</texture>
		</control>
		<control type="label">
			<posx>304.5</posx>
			<posy>0</posy>
			<width>609</width>
			<height>30</height>
			<font>size_21</font>
			<textcolor>FFEDEDED</textcolor>
			<selectedcolor>FFEDEDED</selectedcolor>
			<align>center</align>
			<aligny>center</aligny>
			<label>[UPPERCASE]$INFO[ListItem.Label][/UPPERCASE]</label>
		</control>
	</focusedlayout>
</control>