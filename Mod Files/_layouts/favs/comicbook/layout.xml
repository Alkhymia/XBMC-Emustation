<!-- List Control -->
<control type="list" id="450">
	<posx>32</posx>
	<posy>133.5</posy>
	<width>1216</width>
	<height>520</height>
	<onleft>PageUp</onleft>
	<onright>PageDown</onright>
	<onup>450</onup>
	<ondown>450</ondown>
	<viewtype label="List">List</viewtype>
	<preloaditems>2</preloaditems>
	<itemlayout height="40" width="1216">
		<control type="label">
			<posx>0</posx>
			<posy>0</posy>
			<width>1216</width>
			<height>40</height>
			<font>size_23</font>
			<textcolor>FF282A2B</textcolor>
			<selectedcolor>FFEDEDED</selectedcolor>
			<align>center</align>
			<aligny>center</aligny>
			<label>[UPPERCASE]$INFO[ListItem.Label][/UPPERCASE]</label>
		</control>
	</itemlayout>
	<focusedlayout height="40" width="1216">
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>1216</width>
			<height>41</height>
			<aspectratio>stretch</aspectratio>
			<colordiffuse>6034383B</colordiffuse>
			<texture border="1">background diffuse.png</texture>
		</control>
		<control type="label">
			<posx>0</posx>
			<posy>0</posy>
			<width>1216</width>
			<height>40</height>
			<font>size_23</font>
			<textcolor>FFEDEDED</textcolor>
			<selectedcolor>FFEDEDED</selectedcolor>
			<align>center</align>
			<aligny>center</aligny>
			<label>[UPPERCASE]$INFO[ListItem.Label][/UPPERCASE]</label>
		</control>
	</focusedlayout>
</control>