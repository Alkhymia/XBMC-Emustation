<!-- Video Window Background -->
<control type="image">
	<description>video preview window background</description>
	<posx>488</posx>
	<posy>26</posy>
	<width>420</width>
	<height>418</height>
	<aspectratio>stretch</aspectratio>
	<texture>thumbnf.png</texture>
