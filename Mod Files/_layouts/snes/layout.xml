<!-- list -->
<control type="list" id="9000">
	<posx>667</posx>
	<posy>188</posy>
	<width>588</width>
	<height>480</height>
	<onleft>51</onleft>
	<onup>9000</onup>
	<ondown>9000</ondown>
	<viewtype label="List">List</viewtype>
	<pagecontrol>51</pagecontrol>
	<scrolltime>150</scrolltime>
	<preloaditems>6</preloaditems>
	<itemlayout height="53" width="588">
		<control type="label">
			<posx>19</posx>
			<posy>0</posy>
			<width>550</width>
			<height>53</height>
			<font>extra35</font>
			<textcolor>FF4B4F4D</textcolor>
			<selectedcolor>blue</selectedcolor>
			<align>left</align>
			<label>$INFO[ListItem.Label]</label>
		</control>
	</itemlayout>
	<focusedlayout height="53" width="588">
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>588</width>
			<height>53</height>
			<aspectratio>stretch</aspectratio>
			<colordiffuse>FF765db1</colordiffuse>
			<texture border="1">left_list_diffuse.png</texture>
		</control>
		<control type="label">
			<posx>19</posx>
			<posy>0</posy>
			<width>550</width>
			<height>53</height>
			<font>extra35</font>
			<textcolor>FFD2D2D2</textcolor>
			<selectedcolor>blue</selectedcolor>
			<align>left</align>
			<label>$INFO[ListItem.Label]</label>
		</control>
	</focusedlayout>
</control>
<!-- Scroll bar fails to work due to the scrolltime being set to 200 :-/ -->
<control type="scrollbar" id="51">
	<posx>637</posx>
	<posy>147</posy>
	<width>10</width>
	<height>573</height>
	<texturesliderbackground>-</texturesliderbackground>
	<texturesliderbar border="2,16,2,16">scrollbar_bar.png</texturesliderbar>
	<texturesliderbarfocus border="2,16,2,16">scrollbar_bar_focus.png</texturesliderbarfocus>
	<textureslidernib>scrollbar_nib.png</textureslidernib>
	<textureslidernibfocus>scrollbar_nib.png</textureslidernibfocus>
	<onright>9000</onright>
	<showonepage>false</showonepage>
	<orientation>vertical</orientation>
	<visible allowhiddenfocus="true">Control.HasFocus(51)</visible>
	<animation reversible="true" effect="fade" start="0" end="100" delay="" time="300">visible</animation>
	<animation reversible="true" effect="fade" start="100" end="0" delay="" time="300">hidden</animation>
</control>