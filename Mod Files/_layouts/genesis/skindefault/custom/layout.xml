	<fadetime>ThumbCrossfadeTime</fadetime>
</control>
<!-- list always put last -->
<control type="list" id="9000">
	<posx>667</posx>
	<posy>188</posy>
	<width>588</width>
	<height>480</height>
	<onleft>PageUp</onleft>
	<onright>PageDown</onright>
	<onup>9000</onup>
	<ondown>9000</ondown>
	<viewtype label="List">List</viewtype>
	<pagecontrol>70</pagecontrol>
	<scrolltime>150</scrolltime>
	<preloaditems>6</preloaditems>
	<itemlayout height="53" width="588">
		<control type="label">
			<posx>19</posx>
			<posy>0</posy>
			<width>550</width>
			<height>53</height>
			<font>size_35</font>
			<textcolor>55FEFEFE</textcolor>
			<selectedcolor>FF969696</selectedcolor>
			<align>left</align>
			<label>$INFO[ListItem.Label]</label>
		</control>
	</itemlayout>
	<focusedlayout height="53" width="588">
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>588</width>
			<height>53</height>
			<aspectratio>stretch</aspectratio>
			<colordiffuse>FF006BB7</colordiffuse>
			<texture border="1">left_list_diffuse.png</texture>
		</control>
		<control type="label">
			<posx>19</posx>
			<posy>0</posy>
			<width>550</width>
			<height>53</height>
			<font>size_35</font>
			<textcolor>FFFEFEFE</textcolor>
			<selectedcolor>FF969696</selectedcolor>
			<align>left</align>
			<label>$INFO[ListItem.Label]</label>
		</control>
	</focusedlayout>
</control>
<!-- Scroll bar fails to work due to the scrolltime being set to 200 :-/ -->
<control type="scrollbar" id="70">
	<posx>1270</posx>
	<posy>147</posy>
	<width>10</width>
	<height>573</height>
	<texturesliderbackground>-</texturesliderbackground>
	<texturesliderbar border="2,16,2,16">scrollbar_bar.png</texturesliderbar>
	<texturesliderbarfocus border="2,16,2,16">scrollbar_bar_focus.png</texturesliderbarfocus>
	<textureslidernib>scrollbar_nib.png</textureslidernib>
	<textureslidernibfocus>scrollbar_nib.png</textureslidernibfocus>
	<onleft>9000</onleft>
	<showonepage>false</showonepage>
	<orientation>vertical</orientation>
	<visible>false</visible>
	<animation reversible="true" effect="fade" start="0" end="100" delay="" time="300">visible</animation>
	<animation reversible="true" effect="fade" start="100" end="0" delay="" time="300">hidden</animation>
</control>
