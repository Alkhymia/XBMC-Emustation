<!-- Background Images -->
<control type="image">
	<description>background</description>
	<posx>0</posx>
	<posy>0</posy>
	<width>1280</width>
	<height>720</height>
	<aspectratio>stretch</aspectratio>
	<colordiffuse>FF97999B</colordiffuse>
	<texture>background diffuse.png</texture>
</control>
<!-- Top Underlay Image -->
<control type="image">
	<description>top bar</description>
	<posx>0</posx>
	<posy>0</posy>
	<width>1280</width>
	<height>115</height>
	<aspectratio>stretch</aspectratio>
	<colordiffuse>FFC8CACB</colordiffuse>
	<texture>background diffuse.png</texture>
</control>
<!-- System Log -->
<control type="image">
	<description>logo</description>
	<posx>30</posx>
	<posy>20</posy>
	<width>490</width>
	<height>72</height>
	<aspectratio align="left">keep</aspectratio>
	<texture>layouts/$INFO[Skin.String(emuname)]/art/logo.png</texture>
</control>
<!-- Bottom Underlay Image -->
<control type="image">
	<posx>0</posx>
	<posy>47r</posy>
	<width>1280</width>
	<height>47</height>
	<aspectratio>stretch</aspectratio>
	<colordiffuse>FFC5C6C7</colordiffuse>
	<texture>background diffuse.png</texture>
</control>
<!-- Context Button Overlay -->
<include>ContextButtonsEmulators</include>
<include>ContextButtonsVideo</include>
<!-- Full name, publisher info eg... -->
<control type="textbox">
	<posx>286</posx>
	<posy>159</posy>
	<width>469</width>
	<height>216</height>
	<font>size_15</font>
	<textcolor>FF3C3D3E</textcolor>
	<align>left</align>
	<scrolltime>200</scrolltime>
	<autoscroll delay="10000" time="1000" repeat="10000" condition="Container(9000).HasFocus">Conditional</autoscroll>
	<label>[UPPERCASE]$INFO[Container(9000).ListItem.Label2][/UPPERCASE]</label>
</control>
<!-- Game description (Synopsis) -->
<control type="textbox">
	<posx>32</posx>
	<posy>424</posy>
	<width>723</width>
	<height>207</height>
	<font>size_17</font>
	<textcolor>FF3C3D3E</textcolor>
	<align>left</align>
	<scrolltime>200</scrolltime>
	<autoscroll delay="10000" time="1000" repeat="10000" condition="Container(9000).HasFocus">Conditional</autoscroll>
	<label>[UPPERCASE]$INFO[Container(9000).ListItem.ActualIcon][/UPPERCASE]</label>
</control>
<!-- Thumbnail Image -->
<control type="image">
	<posx>32</posx>
	<posy>159</posy>
	<width>216</width>
	<height>216</height>
	<aspectratio>keep</aspectratio>
	<texture background="false" fallback="layouts/art/no_thumbnail.png">$INFO[Container(9000).listitem.thumb]</texture>
	<fadetime>ThumbCrossfadeTime</fadetime>
</control>
<!-- Video Window Background -->
<control type="image">
	<description>video preview window background</description>
	<posx>32</posx>
	<posy>158</posy>
	<width>295</width>
	<height>227</height>
	<aspectratio>stretch</aspectratio>
	<texture>thumbnf.png</texture>
	<visible>Player.HasVideo</visible>
</control>
<!-- Video Window -->
<control type="videowindow">
	<description>video preview window</description>
	<posx>32</posx>
	<posy>158</posy>
	<width>295</width>
	<height>227</height>
	<aspectratio>keep</aspectratio>
	<animation effect="fade" start="0" end="100" delay="800" time="600">WindowOpen</animation>
	<animation effect="fade" start="100" end="0" delay="0" time="100">WindowClose</animation>
</control>
<!-- List Control -->
<control type="list" id="9000">
	<posx>787</posx>
	<posy>159</posy>
	<width>460</width>
	<height>482</height>
	<onleft>PageUp</onleft>
	<onright>PageDown</onright>
	<onup>9000</onup>
	<ondown>9000</ondown>
	<viewtype label="List">List</viewtype>
	<scrolltime>150</scrolltime>
	<preloaditems>2</preloaditems>
	<itemlayout height="30" width="460">
		<control type="label">
			<posx>14</posx>
			<posy>0</posy>
			<width>432</width>
			<height>30</height>
			<font>size_21</font>
			<textcolor>FF282A2B</textcolor>
			<selectedcolor>FF3C3D3E</selectedcolor>
			<align>left</align>
			<aligny>center</aligny>
			<label>[UPPERCASE]$INFO[ListItem.Label][/UPPERCASE]</label>
		</control>
	</itemlayout>
	<focusedlayout height="30" width="460">
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>460</width>
			<height>31</height>
			<aspectratio>stretch</aspectratio>
			<colordiffuse>FFD51110</colordiffuse>
			<texture border="1">background diffuse.png</texture>
		</control>
		<control type="label">
			<posx>14</posx>
			<posy>0</posy>
			<width>432</width>
			<height>30</height>
			<font>size_21</font>
			<textcolor>FF949698</textcolor>
			<selectedcolor>FF969696</selectedcolor>
			<align>left</align>
			<aligny>center</aligny>
			<label>[UPPERCASE]$INFO[ListItem.Label][/UPPERCASE]</label>
		</control>
	</focusedlayout>
</control>