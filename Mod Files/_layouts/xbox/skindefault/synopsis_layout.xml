<!-- ================== -->
<!-- Custom Layout file -->
<!-- ================== -->
<!-- background images -->
<control type="image">
	<description>background</description>
	<posx>0</posx>
	<posy>0</posy>
	<width>1280</width>
	<height>720</height>
	<aspectratio>stretch</aspectratio>
	<colordiffuse>FF97999B</colordiffuse>
	<texture>background diffuse.png</texture>
</control>
<control type="image">
	<description>top bar</description>
	<posx>0</posx>
	<posy>0</posy>
	<width>1280</width>
	<height>119</height>
	<aspectratio>stretch</aspectratio>
	<colordiffuse>FFC8CACB</colordiffuse>
	<texture>background diffuse.png</texture>
</control>
<!-- logo image -->
<control type="image">
	<description>logo</description>
	<posx>32</posx>
	<posy>20</posy>
	<width>492</width>
	<height>72</height>
	<aspectratio align="left">keep</aspectratio>
	<texture>layouts/$INFO[Skin.String(emuname)]/art/logo.png</texture>
</control>
<!-- fanart image -->
<control type="image">
	<description>right bar</description>
	<posx>0</posx>
	<posy>119</posy>
	<width>1280</width>
	<height>543</height>
	<aspectratio scalediffuse="true">scale</aspectratio>
	<colordiffuse>10FFFFFF</colordiffuse>
	<texture background="true" diffuse="background diffuse.png">$INFO[listitem.path,,fanart.jpg]</texture>
	<fadetime>FanartCrossfadeTime</fadetime>
</control>
<!-- synopsis image -->
<control type="image">
	<posx>32</posx>
	<posy>158</posy>
	<width>723</width>
	<height>472</height>
	<aspectratio>stretch</aspectratio>
	<texture background="true">$INFO[listitem.path,,_resources/skindefault/synopsis.png]</texture>
	<fadetime>ThumbCrossfadeTime</fadetime>
</control>
<!-- thumbnail image -->
<control type="image">
	<posx>32</posx>
	<posy>158</posy>
	<width>312</width>
	<height>217</height>
	<aspectratio>keep</aspectratio>
	<texture background="true" fallback="layouts/art/no_thumbnail.png">$INFO[listitem.thumb]</texture>
	<fadetime>ThumbCrossfadeTime</fadetime>
</control>
<!-- list -->
<control type="list" id="50">
	<posx>787</posx>
	<posy>158</posy>
	<width>460</width>
	<height>450</height>
	<onright>70</onright>
	<onup>50</onup>
	<ondown>50</ondown>
	<viewtype label="List">List</viewtype>
	<pagecontrol>70</pagecontrol>
	<scrolltime>150</scrolltime>
	<preloaditems>6</preloaditems>
	<itemlayout height="30" width="460">
		<control type="label">
			<posx>14</posx>
			<posy>0</posy>
			<width>432</width>
			<height>30</height>
			<font>size_23</font>
			<textcolor>FF282A2B</textcolor>
			<selectedcolor>blue</selectedcolor>
			<align>left</align>
			<aligny>center</aligny>
			<label>[B][UPPERCASE]$INFO[ListItem.Label][/UPPERCASE][/B]</label>
		</control>
	</itemlayout>
	<focusedlayout height="30" width="460">
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>460</width>
			<height>31</height>
			<aspectratio>stretch</aspectratio>
			<colordiffuse>FF393A3B</colordiffuse>
			<texture border="1">background diffuse.png</texture>
		</control>
		<control type="label">
			<posx>14</posx>
			<posy>0</posy>
			<width>432</width>
			<height>30</height>
			<font>size_23</font>
			<textcolor>FF949799</textcolor>
			<selectedcolor>blue</selectedcolor>
			<align>left</align>
			<aligny>center</aligny>
			<label>[B][UPPERCASE]$INFO[ListItem.Label][/UPPERCASE][/B]</label>
		</control>
	</focusedlayout>
</control>
<!-- Scroll bar fails to work due to the scrolltime being set to 200 :-/ -->
<control type="scrollbar" id="70">
	<posx>1270</posx>
	<posy>119</posy>
	<width>10</width>
	<height>543</height>
	<texturesliderbackground>-</texturesliderbackground>
	<texturesliderbar border="2,16,2,16">scrollbar_bar.png</texturesliderbar>
	<texturesliderbarfocus border="2,16,2,16">scrollbar_bar_focus.png</texturesliderbarfocus>
	<textureslidernib>scrollbar_nib.png</textureslidernib>
	<textureslidernibfocus>scrollbar_nib.png</textureslidernibfocus>
	<onleft>50</onleft>
	<showonepage>false</showonepage>
	<orientation>vertical</orientation>
	<animation reversible="true" effect="fade" start="0" end="100" delay="" time="300">visible</animation>
	<animation reversible="true" effect="fade" start="100" end="0" delay="" time="300">hidden</animation>
</control>
