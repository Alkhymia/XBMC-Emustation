<!-- Top Underlay Image -->
<control type="image">
	<posx>0</posx>
	<posy>0</posy>
	<width>1280</width>
	<height>115</height>
	<aspectratio>stretch</aspectratio>
	<colordiffuse>FF77BA3F</colordiffuse>
	<texture border="2">layouts/art/top_bar.png</texture>
</control>
<!-- System Logo -->
<control type="image">
	<description>logo</description>
	<posx>30</posx>
	<posy>20</posy>
	<width>490</width>
	<height>72</height>
	<aspectratio align="left">keep</aspectratio>
	<texture>layouts/$INFO[Skin.String(emuname)]/art/logo.png</texture>
</control>
<control type="image">
	<description>controller</description>
	<posx>995</posx>
	<posy>0</posy>
	<width>190</width>
	<height>110</height>
	<aspectratio>keep</aspectratio>
	<texture>layouts/$INFO[Skin.String(emuname)]/art/system_art_small.png</texture>
	<animation effect="fade" start="100" end="65" time="0" condition="true">Conditional</animation>
</control>
<!-- Bottom Underlay Image -->
<control type="image">
	<posx>0</posx>
	<posy>47r</posy>
	<width>1280</width>
	<height>47</height>
	<aspectratio>stretch</aspectratio>
	<colordiffuse>FF77BA3F</colordiffuse>
	<texture>layouts/art/help_background.png</texture>
</control>
<!-- Context Button Overlay -->
<include>ContextButtonsXBE</include>
<!-- thumbnail image -->
<control type="image">
	<posx>727</posx>
	<posy>159</posy>
	<width>450</width>
	<height>450</height>
	<aspectratio>keep</aspectratio>
	<texture background="false" fallback="layouts/art/no_thumbnail.png">$INFO[listitem.thumb]</texture>
	<fadetime>ThumbCrossfadeTime</fadetime>
</control>
<!-- List Control -->
<control type="list" id="50">
	<posx>32</posx>
	<posy>159</posy>
	<width>560</width>
	<height>450</height>
	<onleft>PageUp</onleft>
	<onright>PageDown</onright>
	<onup>50</onup>
	<ondown>50</ondown>
	<viewtype label="List">List</viewtype>
	<scrolltime>150</scrolltime>
	<preloaditems>2</preloaditems>
	<itemlayout height="30" width="560">
		<control type="label">
			<posx>14</posx>
			<posy>0</posy>
			<width>532</width>
			<height>30</height>
			<font>size_21</font>
			<textcolor>FF969696</textcolor>
			<selectedcolor>FF969696</selectedcolor>
			<align>left</align>
			<aligny>center</aligny>
			<label>[B][UPPERCASE]$INFO[ListItem.Label][/UPPERCASE][/B]</label>
		</control>
	</itemlayout>
	<focusedlayout height="30" width="560">
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>560</width>
			<height>31</height>
			<aspectratio>stretch</aspectratio>
			<colordiffuse>FF1C1C1C</colordiffuse>
			<texture border="1">background diffuse.png</texture>
		</control>
		<control type="label">
			<posx>14</posx>
			<posy>0</posy>
			<width>532</width>
			<height>30</height>
			<font>size_21</font>
			<textcolor>FF77BA3F</textcolor>
			<selectedcolor>FF969696</selectedcolor>
			<align>left</align>
			<aligny>center</aligny>
			<label>[B][UPPERCASE]$INFO[ListItem.Label][/UPPERCASE][/B]</label>
		</control>
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>5</width>
			<height>30</height>
			<aspectratio>stretch</aspectratio>
			<texture>$INFO[listitem.overlay]</texture>
		</control>
	</focusedlayout>
</control>