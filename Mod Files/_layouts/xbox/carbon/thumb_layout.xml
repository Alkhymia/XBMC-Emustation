<!-- background images -->
<control type="image">
	<description>top bar</description>
	<posx>0</posx>
	<posy>0</posy>
	<width>1280</width>
	<height>113</height>
	<aspectratio>stretch</aspectratio>
	<colordiffuse>73000000</colordiffuse>
	<texture>background diffuse.png</texture>
</control>
<control type="image">
	<description>top coloured bar</description>
	<posx>0</posx>
	<posy>115</posy>
	<width>1280</width>
	<height>4</height>
	<aspectratio>stretch</aspectratio>
	<colordiffuse>FF77ba3f</colordiffuse>
	<texture>background diffuse.png</texture>
</control>
<!-- logo image -->
<control type="image">
	<description>logo</description>
	<posx>32</posx>
	<posy>20</posy>
	<width>492</width>
	<height>72</height>
	<aspectratio align="left">keep</aspectratio>
	<texture>layouts/$INFO[Skin.String(emuname)]/art/logo.png</texture>
</control>
<control type="image">
	<description>controller</description>
	<posx>1000</posx>
	<posy>5</posy>
	<width>280</width>
	<height>100</height>
	<aspectratio align="left">keep</aspectratio>
	<texture>layouts/$INFO[Skin.String(emuname)]/art/system_art_small.png</texture>
	<animation effect="fade" start="100" end="100" time="0" condition="true">Conditional</animation>
</control>
<!-- fanart image -->
<control type="image">
	<description>right bar</description>
	<posx>0</posx>
	<posy>119</posy>
	<width>1280</width>
	<height>543</height>
	<aspectratio scalediffuse="true">scale</aspectratio>
	<colordiffuse>10FFFFFF</colordiffuse>
	<texture background="true" diffuse="background diffuse.png">$INFO[listitem.path,,fanart.jpg]</texture>
	<fadetime>FanartCrossfadeTime</fadetime>
</control>
<!-- thumbnail image -->
<control type="image">
	<posx>686</posx>
	<posy>140</posy>
	<width>501</width>
	<height>501</height>
	<aspectratio>keep</aspectratio>
	<texture background="true" fallback="layouts/art/no_thumbnail.png">$INFO[listitem.thumb]</texture>
	<fadetime>ThumbCrossfadeTime</fadetime>
</control>
<!-- list -->
<control type="list" id="50">
	<posx>33</posx>
	<posy>158</posy>
	<width>560</width>
	<height>450</height>
	<onleft>PageUp</onleft>
	<onright>PageDown</onright>
	<onup>50</onup>
	<ondown>50</ondown>
	<viewtype label="List">List</viewtype>
	<pagecontrol>70</pagecontrol>
	<scrolltime>150</scrolltime>
	<preloaditems>6</preloaditems>
	<itemlayout height="30" width="560">
		<control type="label">
			<posx>14</posx>
			<posy>0</posy>
			<width>532</width>
			<height>30</height>
			<font>size_23</font>
			<textcolor>FF969696</textcolor>
			<selectedcolor>blue</selectedcolor>
			<align>left</align>
			<aligny>center</aligny>
			<label>[B][UPPERCASE]$INFO[ListItem.Label][/UPPERCASE][/B]</label>
		</control>
	</itemlayout>
	<focusedlayout height="30" width="560">
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>560</width>
			<height>31</height>
			<aspectratio>stretch</aspectratio>
			<colordiffuse>FF1C1C1C</colordiffuse>
			<texture border="1">background diffuse.png</texture>
		</control>
		<control type="label">
			<posx>14</posx>
			<posy>0</posy>
			<width>532</width>
			<height>30</height>
			<font>size_23</font>
			<textcolor>FF77ba3f</textcolor>
			<selectedcolor>blue</selectedcolor>
			<align>left</align>
			<aligny>center</aligny>
			<label>[B][UPPERCASE]$INFO[ListItem.Label][/UPPERCASE][/B]</label>
		</control>
	</focusedlayout>
</control>
<!-- Scroll bar fails to work due to the scrolltime being set to 200 :-/ -->
<control type="scrollbar" id="70">
	<posx>1270</posx>
	<posy>119</posy>
	<width>10</width>
	<height>543</height>
	<texturesliderbackground>-</texturesliderbackground>
	<texturesliderbar border="2,16,2,16">scrollbar_bar.png</texturesliderbar>
	<texturesliderbarfocus border="2,16,2,16">scrollbar_bar_focus.png</texturesliderbarfocus>
	<textureslidernib>scrollbar_nib.png</textureslidernib>
	<textureslidernibfocus>scrollbar_nib.png</textureslidernibfocus>
	<onleft>50</onleft>
	<showonepage>false</showonepage>
	<orientation>vertical</orientation>
	<visible>false</visible>
	<animation reversible="true" effect="fade" start="0" end="100" delay="" time="300">visible</animation>
	<animation reversible="true" effect="fade" start="100" end="0" delay="" time="300">hidden</animation>
</control>
