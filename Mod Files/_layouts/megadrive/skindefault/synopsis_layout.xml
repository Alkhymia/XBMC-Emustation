<!-- background images -->
<control type="image">
	<description>background</description>
	<posx>0</posx>
	<posy>0</posy>
	<width>1280</width>
	<height>720</height>
	<aspectratio>stretch</aspectratio>
	<colordiffuse>FF97999B</colordiffuse>
	<texture>background diffuse.png</texture>
</control>
<control type="image">
	<description>top bar</description>
	<posx>0</posx>
	<posy>0</posy>
	<width>1280</width>
	<height>119</height>
	<aspectratio>stretch</aspectratio>
	<colordiffuse>FFC8CACB</colordiffuse>
	<texture>background diffuse.png</texture>
</control>
<!-- logo image -->
<control type="image">
	<description>logo</description>
	<posx>32</posx>
	<posy>20</posy>
	<width>492</width>
	<height>72</height>
	<aspectratio align="left">keep</aspectratio>
	<texture>layouts/$INFO[Skin.String(emuname)]/art/logo.png</texture>
</control>
<!-- synopsis -->
<!-- This is the games publisher, how many players eg... -->
<control type="textbox">
	<posx>332</posx>
	<posy>160</posy>
	<width>412</width>
	<height>210</height>
	<font>size_15</font>
	<textcolor>FF282A2B</textcolor>
	<align>left</align>
	<scrolltime>200</scrolltime>
	<autoscroll delay="10000" time="1000" repeat="10000" condition="Container(9000).HasFocus">Conditional</autoscroll>
	<label>[B][UPPERCASE]$INFO[Container(9000).ListItem.Label2][/UPPERCASE][/B]</label>
</control>
<!-- This is the game description and hits eg... -->
<control type="textbox">
	<posx>32</posx>
	<posy>395</posy>
	<width>723</width>
	<height>240</height>
	<font>size_15</font>
	<textcolor>FF282A2B</textcolor>
	<align>left</align>
	<scrolltime>200</scrolltime>
	<autoscroll delay="10000" time="1000" repeat="10000" condition="Container(9000).HasFocus">Conditional</autoscroll>
	<label>[B][UPPERCASE]$INFO[Container(9000).ListItem.ActualIcon][/UPPERCASE][/B]</label>
</control>
<!-- thumbnail image -->
<control type="image">
	<posx>32</posx>
	<posy>158</posy>
	<width>295</width>
	<height>227</height>
	<aspectratio>keep</aspectratio>
	<texture background="true" fallback="layouts/art/no_thumbnail.png">$INFO[Container(9000).listitem.thumb]</texture>
	<fadetime>ThumbCrossfadeTime</fadetime>
</control>
<control type="image">
	<description>video preview window background</description>
	<posx>32</posx>
	<posy>158</posy>
	<width>295</width>
	<height>227</height>
	<aspectratio>stretch</aspectratio>
	<texture>thumbnf.png</texture>
	<visible>Player.HasVideo</visible>
</control>
<control type="videowindow">
	<description>video preview window</description>
	<posx>32</posx>
	<posy>158</posy>
	<width>295</width>
	<height>227</height>
	<aspectratio>keep</aspectratio>
	<animation effect="fade" start="0" end="100" delay="800" time="600">WindowOpen</animation>
	<animation effect="fade" start="100" end="0" delay="0" time="100">WindowClose</animation>
</control>
<!-- list -->
<control type="list" id="9000">
	<posx>787</posx>
	<posy>158</posy>
	<width>460</width>
	<height>450</height>
	<onleft>PageUp</onleft>
	<onright>PageDown</onright>
	<onup>9000</onup>
	<ondown>9000</ondown>
	<viewtype label="List">List</viewtype>
	<pagecontrol>70</pagecontrol>
	<scrolltime>150</scrolltime>
	<preloaditems>6</preloaditems>
	<itemlayout height="30" width="460">
		<control type="label">
			<posx>14</posx>
			<posy>0</posy>
			<width>432</width>
			<height>30</height>
			<font>size_23</font>
			<textcolor>FF282A2B</textcolor>
			<selectedcolor>FF969696</selectedcolor>
			<align>left</align>
			<aligny>center</aligny>
			<label>[B][UPPERCASE]$INFO[ListItem.Label][/UPPERCASE][/B]</label>
		</control>
	</itemlayout>
	<focusedlayout height="30" width="460">
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>460</width>
			<height>31</height>
			<aspectratio>stretch</aspectratio>
			<colordiffuse>FF1A327D</colordiffuse>
			<texture border="1">background diffuse.png</texture>
		</control>
		<control type="label">
			<posx>14</posx>
			<posy>0</posy>
			<width>432</width>
			<height>30</height>
			<font>size_23</font>
			<textcolor>FF949799</textcolor>
			<selectedcolor>FF969696</selectedcolor>
			<align>left</align>
			<aligny>center</aligny>
			<label>[B][UPPERCASE]$INFO[ListItem.Label][/UPPERCASE][/B]</label>
		</control>
	</focusedlayout>
</control>
