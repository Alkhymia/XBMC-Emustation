<advancedsettings>
		<loglevel hide="false">-1</loglevel>
		<powersave>false</powersave>
		<nodvdrom>false</nodvdrom>
		<!-- this value gives the best quality and doesn't run out of ram -->
		<!-- Note: its slower to draw the images when scrolling fast ( triggers ) -->
		<thumbsize>508</thumbsize>
		<bginfoloadermaxthreads>5</bginfoloadermaxthreads>
		<myprograms>
				<trainerpath>Q:\system\trainers\</trainerpath>
		</myprograms>
		<pictures>
				<screenshotpath>Q:\system\Screenshots\</screenshotpath>
		</pictures>
</advancedsettings>